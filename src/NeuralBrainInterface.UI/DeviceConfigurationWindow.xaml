<Window x:Class="NeuralBrainInterface.UI.DeviceConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Device Configuration" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style x:Key="ConfigButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Name="HeaderText" 
                   Text="Device Configuration" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- Configuration Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="ConfigurationPanel">
                
                <!-- Device Status Section -->
                <TextBlock Text="Current Status" Style="{StaticResource SectionHeaderStyle}"/>
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <StackPanel Name="StatusPanel">
                        <TextBlock Name="DeviceStatusText" Style="{StaticResource InfoTextStyle}"/>
                        <TextBlock Name="PermissionStatusText" Style="{StaticResource InfoTextStyle}"/>
                        <TextBlock Name="ErrorStatusText" Style="{StaticResource InfoTextStyle}" Foreground="Red"/>
                    </StackPanel>
                </Border>
                
                <!-- Device Settings Section -->
                <TextBlock Text="Settings" Style="{StaticResource SectionHeaderStyle}"/>
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <StackPanel Name="SettingsPanel">
                        <!-- Audio Settings (for microphone/speaker) -->
                        <StackPanel Name="AudioSettingsPanel" Visibility="Collapsed">
                            <TextBlock Text="Audio Quality:" Margin="0,5,0,2"/>
                            <ComboBox Name="AudioQualityCombo" Margin="0,0,0,10">
                                <ComboBoxItem Content="Low (8 kHz)" Tag="8000"/>
                                <ComboBoxItem Content="Medium (16 kHz)" Tag="16000"/>
                                <ComboBoxItem Content="High (44.1 kHz)" Tag="44100" IsSelected="True"/>
                                <ComboBoxItem Content="Studio (48 kHz)" Tag="48000"/>
                            </ComboBox>
                            
                            <TextBlock Text="Channels:" Margin="0,5,0,2"/>
                            <ComboBox Name="AudioChannelsCombo" Margin="0,0,0,10">
                                <ComboBoxItem Content="Mono" Tag="1"/>
                                <ComboBoxItem Content="Stereo" Tag="2" IsSelected="True"/>
                            </ComboBox>
                            
                            <CheckBox Name="NoiseReductionCheck" Content="Enable Noise Reduction" 
                                     IsChecked="True" Margin="0,0,0,10"/>
                        </StackPanel>
                        
                        <!-- Video Settings (for webcam) -->
                        <StackPanel Name="VideoSettingsPanel" Visibility="Collapsed">
                            <TextBlock Text="Video Resolution:" Margin="0,5,0,2"/>
                            <ComboBox Name="VideoResolutionCombo" Margin="0,0,0,10">
                                <ComboBoxItem Content="640x480 (VGA)" Tag="640,480"/>
                                <ComboBoxItem Content="1280x720 (HD)" Tag="1280,720" IsSelected="True"/>
                                <ComboBoxItem Content="1920x1080 (Full HD)" Tag="1920,1080"/>
                            </ComboBox>
                            
                            <TextBlock Text="Frame Rate:" Margin="0,5,0,2"/>
                            <ComboBox Name="VideoFrameRateCombo" Margin="0,0,0,10">
                                <ComboBoxItem Content="15 FPS" Tag="15"/>
                                <ComboBoxItem Content="30 FPS" Tag="30" IsSelected="True"/>
                                <ComboBoxItem Content="60 FPS" Tag="60"/>
                            </ComboBox>
                            
                            <TextBlock Text="Compression Quality:" Margin="0,5,0,2"/>
                            <Slider Name="VideoQualitySlider" Minimum="0.1" Maximum="1.0" Value="0.8" 
                                   TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="0,0,0,5"/>
                            <TextBlock Name="VideoQualityLabel" Text="High Quality (80%)" 
                                      HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        </StackPanel>
                        
                        <!-- Voice Settings (for speaker) -->
                        <StackPanel Name="VoiceSettingsPanel" Visibility="Collapsed">
                            <TextBlock Text="Voice Type:" Margin="0,5,0,2"/>
                            <ComboBox Name="VoiceTypeCombo" Margin="0,0,0,10">
                                <ComboBoxItem Content="Default" Tag="default" IsSelected="True"/>
                                <ComboBoxItem Content="Male" Tag="male"/>
                                <ComboBoxItem Content="Female" Tag="female"/>
                            </ComboBox>
                            
                            <TextBlock Text="Speech Rate:" Margin="0,5,0,2"/>
                            <Slider Name="SpeechRateSlider" Minimum="0.5" Maximum="2.0" Value="1.0" 
                                   TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="0,0,0,5"/>
                            <TextBlock Name="SpeechRateLabel" Text="Normal Speed (100%)" 
                                      HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Volume:" Margin="0,5,0,2"/>
                            <Slider Name="VolumeSlider" Minimum="0.0" Maximum="1.0" Value="0.8" 
                                   TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="0,0,0,5"/>
                            <TextBlock Name="VolumeLabel" Text="80%" 
                                      HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Actions Section -->
                <TextBlock Text="Actions" Style="{StaticResource SectionHeaderStyle}"/>
                <WrapPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Name="TestDeviceButton" Content="Test Device" 
                           Style="{StaticResource ConfigButtonStyle}"/>
                    <Button Name="RequestPermissionButton" Content="Request Permission" 
                           Style="{StaticResource ConfigButtonStyle}"/>
                    <Button Name="RefreshStatusButton" Content="Refresh Status" 
                           Style="{StaticResource ConfigButtonStyle}"/>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                   HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Name="ApplyButton" Content="Apply" 
                   Style="{StaticResource ConfigButtonStyle}" 
                   IsDefault="True"/>
            <Button Name="CancelButton" Content="Cancel" 
                   Style="{StaticResource ConfigButtonStyle}" 
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>