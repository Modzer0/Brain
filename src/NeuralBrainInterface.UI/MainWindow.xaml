<Window x:Class="NeuralBrainInterface.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neural Brain Interface" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        MinWidth="800" MinHeight="600">
    
    <Window.Resources>
        <Style x:Key="DeviceButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="Blue"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="Green"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Status Bar -->
        <Border Grid.Row="0" Background="LightGray" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Name="StatusText" Grid.Column="0" Text="Neural Brain Interface - Ready" 
                          VerticalAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Name="TimeDisplay" Grid.Column="1" Text="" 
                          VerticalAlignment="Center" FontFamily="Consolas"/>
            </Grid>
        </Border>
        
        <!-- Mind Display Area -->
        <Border Grid.Row="1" Background="Black" Margin="10" BorderBrush="DarkGray" BorderThickness="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Neural Mind Display -->
                <Canvas Name="MindDisplayCanvas" Grid.Column="0" Background="Black" ClipToBounds="True">
                    <TextBlock Text="Neural Mind Display - Visualization will appear here" 
                              Foreground="White" 
                              FontSize="16"
                              FontWeight="SemiBold"
                              Canvas.Left="50" 
                              Canvas.Top="50"/>
                    <TextBlock Text="Upload files or type messages to see neural activity" 
                              Foreground="LightGray" 
                              FontSize="12"
                              Canvas.Left="50" 
                              Canvas.Top="80"/>
                </Canvas>
                
                <!-- Conversation Display -->
                <Border Grid.Column="1" Background="DarkGray" BorderBrush="Gray" BorderThickness="1" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Conversation" 
                                  Foreground="White" 
                                  FontWeight="Bold" 
                                  FontSize="14" 
                                  Margin="10,5"
                                  HorizontalAlignment="Center"/>
                        
                        <ScrollViewer Name="ConversationScrollViewer" Grid.Row="1" 
                                     VerticalScrollBarVisibility="Auto" 
                                     HorizontalScrollBarVisibility="Disabled"
                                     Margin="5">
                            <TextBlock Name="ConversationDisplay" 
                                      Foreground="White" 
                                      FontSize="12" 
                                      TextWrapping="Wrap"
                                      Margin="5"
                                      Text="Welcome to Neural Brain Interface!&#x0a;Type a message below to start chatting."/>
                        </ScrollViewer>
                    </Grid>
                </Border>
                
                <!-- Overlay for responsive text when canvas is small -->
                <TextBlock Name="MindDisplayOverlay" 
                          Grid.Column="0"
                          Text="Neural Activity Monitor" 
                          Foreground="White" 
                          FontSize="20" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          Visibility="Collapsed"/>
            </Grid>
        </Border>
        
        <!-- Device Controls -->
        <WrapPanel Name="DeviceControlsPanel" Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center" 
                   Margin="10">
            <StackPanel Orientation="Vertical" Margin="5">
                <Button Name="MicrophoneToggle" Content="ðŸŽ¤ Microphone OFF" 
                        Style="{StaticResource DeviceButtonStyle}"
                        Background="LightGray"/>
                <Button Name="MicrophoneConfig" Content="âš™ï¸ Configure" 
                        Width="120" Height="25" Margin="0,2,0,0"
                        FontSize="10" Background="LightBlue"/>
            </StackPanel>
            
            <StackPanel Orientation="Vertical" Margin="5">
                <Button Name="SpeakerToggle" Content="ðŸ”Š Speaker OFF" 
                        Style="{StaticResource DeviceButtonStyle}"
                        Background="LightGray"/>
                <Button Name="SpeakerConfig" Content="âš™ï¸ Configure" 
                        Width="120" Height="25" Margin="0,2,0,0"
                        FontSize="10" Background="LightBlue"/>
            </StackPanel>
            
            <StackPanel Orientation="Vertical" Margin="5">
                <Button Name="WebcamToggle" Content="ðŸ“¹ Webcam OFF" 
                        Style="{StaticResource DeviceButtonStyle}"
                        Background="LightGray"/>
                <Button Name="WebcamConfig" Content="âš™ï¸ Configure" 
                        Width="120" Height="25" Margin="0,2,0,0"
                        FontSize="10" Background="LightBlue"/>
            </StackPanel>
            
            <StackPanel Orientation="Vertical" Margin="10,5">
                <Button Name="DevicePermissionsButton" Content="ðŸ” Permissions" 
                        Width="120" Height="40" Margin="5"
                        FontSize="12" FontWeight="SemiBold"
                        BorderThickness="2" BorderBrush="DarkGray"
                        Background="LightYellow" Cursor="Hand"/>
                <Button Name="RefreshDevicesButton" Content="ðŸ”„ Refresh" 
                        Width="120" Height="25" Margin="0,2,0,0"
                        FontSize="10" Background="LightCyan"/>
            </StackPanel>
        </WrapPanel>
        
        <!-- Sleep/Wake Controls -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,5">
            <Button Name="SleepButton" Content="ðŸ˜´ Sleep" 
                    Style="{StaticResource ActionButtonStyle}"
                    Background="LightBlue"/>
            <Button Name="WakeButton" Content="â° Wake" 
                    Style="{StaticResource ActionButtonStyle}"
                    Background="LightYellow"/>
        </StackPanel>
        
        <!-- Text Interface -->
        <Grid Grid.Row="4" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Name="TextInput" Grid.Column="0" Height="40" 
                     VerticalContentAlignment="Center" 
                     FontSize="14" 
                     Margin="0,0,10,0"
                     Padding="10,0"
                     BorderThickness="2"
                     BorderBrush="DarkGray"
                     KeyDown="TextInput_KeyDown"/>
            <Button Name="SendButton" Grid.Column="1" Content="Send" 
                    Width="80" Height="40" Margin="0,0,10,0"
                    Background="LightGreen" FontWeight="SemiBold"
                    BorderThickness="2" BorderBrush="DarkGray"/>
            <Button Name="FileUploadButton" Grid.Column="2" Content="ðŸ“Ž Upload" 
                    Width="80" Height="40"
                    Background="LightCyan" FontWeight="SemiBold"
                    BorderThickness="2" BorderBrush="DarkGray"/>
        </Grid>
    </Grid>
</Window>